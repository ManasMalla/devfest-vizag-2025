rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isVolunteer() {
      return isSignedIn() && exists(/databases/$(database)/documents/volunteers/$(request.auth.uid));
    }

    function getVolunteerData(userId) {
      return get(/databases/$(database)/documents/volunteers/$(userId)).data;
    }

    // Public read-only collections
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if false; // All writes must go through server actions
    }
    match /agenda/{itemId} {
      allow read: if true;
      allow write: if false;
    }
    match /agendaTracks/{trackId} {
      allow read: if true;
      allow write: if false;
    }
     match /announcements/{announcementId} {
      allow read: if true;
      allow write: if false;
    }

    // Admins have full access to their own collection
    match /admins/{adminId} {
      allow read, write: if isAdmin();
    }

    // Applications are private to the user who submitted them, but admins can access them.
    match /applications/{appId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if (isSignedIn() && resource.data.userId == request.auth.uid) || isAdmin();
      allow update, delete: if isAdmin();
    }

    // Volunteers, Teams, and Tasks are readable by team members or admins.
    match /volunteers/{volunteerId} {
       allow read: if isAdmin() || (isVolunteer() && getVolunteerData(request.auth.uid).teamId == resource.data.teamId);
       allow write: if false; // All writes through server actions
    }
    
    match /teams/{teamId} {
      allow read: if isAdmin() || (isVolunteer() && getVolunteerData(request.auth.uid).teamId == teamId);
      allow write: if false;
    }

    match /tasks/{taskId} {
      allow read: if isAdmin() || (isVolunteer() && getVolunteerData(request.auth.uid).teamId == resource.data.teamId);
      allow write: if false;
    }
  }
}
